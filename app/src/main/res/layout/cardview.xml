<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="325dp"
    android:layout_height="125dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="20dp"
    android:translationZ="20dp"
    app:cardMaxElevation="35dp"
    android:layout_margin="@dimen/dialogplus_default_center_margin"
    app:cardBackgroundColor="@color/white"
    android:outlineSpotShadowColor="#8B0000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">


        <TextView
            android:id="@+id/donorname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:text="Name"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/donoremail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Email"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_below="@id/donorname"/>

        <TextView
            android:id="@+id/donorbg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Blood Group"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_below="@id/donoremail"/>



    </RelativeLayout>
</androidx.cardview.widget.CardView>